Simple ProgressDialog(Com Thread)

##Uso Na Classe
progressDialog = ProgressDialog.show(context," ", "Aguarde...",true);
                                new Thread(new Runnable() {

                                    @Override
                                    public void run() {
                                        //codigo a ser carregado 
                                        progressDialog.dismiss();  //fechar progress ao termino da tarefa
                                    }

                                }).start();
##Uso Na Classe

##Layout

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="fill_parent">
        
        <TextView
            android:id="@+id/titulo_progress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginTop="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_alignParentLeft="true"
        />
        <ProgressBar android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_centerHorizontal="true" 
            android:layout_below="@id/titulo_progress1"
            />
            <TextView
            android:id="@+id/progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/progress"
        />
        <TextView
            android:id="@+id/progress_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="15dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/progress"
        />
    
    <TextView
        android:id="@+id/titulo_progress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="12dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/progress_number"
    />
    <ProgressBar android:id="@+id/secondaryProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:layout_marginBottom="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titulo_progress2" />
    <TextView
        android:id="@+id/secondary_progress_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/secondaryProgress"
    />
    <TextView
        android:id="@+id/secondary_progress_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dip"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="15dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/secondaryProgress"
    />
</RelativeLayout>

